<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_main"

        tools:layout_editor_absoluteX="-91dp"
        tools:layout_editor_absoluteY="-16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line1"
        app:layout_constraintGuide_percent="0.15"

        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/my_pr_bar"
        android:elevation="25dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_region"
        android:textSize="25sp"
        android:text="Toshkent"
        android:textColor="#00796B"
        android:layout_margin="12dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="8"
        android:textColor="#00796B"
        android:textSize="25sp"
        android:id="@+id/tv_sana"
        android:layout_marginTop="30dp"

        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="55dp"
        android:text="Ramazon"
        android:textColor="#00796B"
        android:id="@+id/tv_oy"
        android:textSize="25sp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="10dp"
        android:text="1445"
        android:id="@+id/tv_yil"
        android:textColor="#573035"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/tv_yil"
        app:layout_constraintTop_toTopOf="parent"
        android:text="/ "
        android:textColor="#573035"
        android:id="@+id/tv_chiziq"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/tv_yil"
        app:layout_constraintTop_toTopOf="parent"
        android:text="2024.03.18"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/tv_date"
        android:textColor="#573035"
        android:layout_marginRight="18dp"
        android:layout_marginTop="15dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:text="Dushanba"
        android:id="@+id/tv_haftakun"
        android:textSize="20sp"
        android:textColor="#573035"
        android:layout_marginRight="38dp"
        android:layout_marginTop="4dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:text="Bugungi namoz vaqtlari:"
        android:textSize="20sp"
        android:textColor="#573035"
        android:id="@+id/tv_text"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:id="@+id/card_1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FAD7AF"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bomdod:"
            android:textSize="23sp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="25dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:11"
            android:textColor="#582E38"
            android:id="@+id/tv_bomdod"
            android:textSize="23sp"
            android:layout_gravity="right|center"
            android:layout_marginRight="25dp"

            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_1"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:id="@+id/card_2"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FBD8B0"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kun chiqishi:"
            android:textSize="23sp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="25dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:11"
            android:id="@+id/tv_tong"
            android:textSize="23sp"
            android:layout_gravity="right|center"
            android:layout_marginRight="25dp"

            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_2"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:id="@+id/card_3"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FCD9B1"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peshin:"
            android:textSize="23sp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="25dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:11"
            android:id="@+id/tv_peshin"
            android:textSize="23sp"
            android:layout_gravity="right|center"
            android:layout_marginRight="25dp"

            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_3"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:id="@+id/card_4"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FDDAB2"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asr:"
            android:textSize="23sp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="25dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:11"
            android:id="@+id/tv_asr"
            android:textSize="23sp"
            android:layout_gravity="right|center"
            android:layout_marginRight="25dp"

            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_4"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:id="@+id/card_5"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FEDBB3"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shom:"
            android:textSize="23sp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="25dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:11"
            android:id="@+id/tv_shom"
            android:textSize="23sp"
            android:layout_gravity="right|center"
            android:layout_marginRight="25dp"

            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_5"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:id="@+id/card_6"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFDCB4"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xufton:"
            android:textSize="23sp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="25dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:11"
            android:id="@+id/tv_xufton"
            android:textSize="23sp"
            android:layout_gravity="right|center"
            android:layout_marginRight="25dp"

            />

    </androidx.cardview.widget.CardView>


    <Spinner
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginBottom="50dp"
        android:id="@+id/my_spin"
        android:entries="@array/my_date"

        />








</androidx.constraintlayout.widget.ConstraintLayout>