<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_main"

        tools:layout_editor_absoluteX="-91dp"
        tools:layout_editor_absoluteY="-16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line1"
        app:layout_constraintGuide_percent="0.15"

        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/my_pr_bar"
        android:elevation="25dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_region"
        android:textSize="25sp"
        android:text="Toshkent"
        android:textColor="#00796B"
        android:layout_margin="12dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="8"
        android:textColor="#00796B"
        android:textSize="25sp"
        android:id="@+id/tv_sana"
        android:layout_marginTop="30dp"

        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="55dp"
        android:text="Ramazon"
        android:textColor="#00796B"
        android:id="@+id/tv_oy"
        android:textSize="25sp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="10dp"
        android:text="1445"
        android:id="@+id/tv_yil"
        android:textColor="#573035"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/tv_yil"
        app:layout_constraintTop_toTopOf="parent"
        android:text="/ "
        android:textColor="#573035"
        android:id="@+id/tv_chiziq"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/tv_yil"
        app:layout_constraintTop_toTopOf="parent"
        android:text="2024.03.18"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/tv_date"
        android:textColor="#573035"
        android:layout_marginRight="18dp"
        android:layout_marginTop="15dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Dushanba"
        android:id="@+id/tv_haftakun"
        android:textSize="20sp"
        android:textColor="#573035"
        android:layout_marginTop="4dp"

        />

    <androidx.viewpager.widget.ViewPager
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/my_viewpager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_haftakun"
        app:layout_constraintBottom_toTopOf="@id/my_tab"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="13dp"
        />






<com.google.android.material.tabs.TabLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:id="@+id/my_tab"
    app:tabMode="fixed"
    app:tabGravity="center"
    app:tabIndicatorHeight="0dp"
    android:background="@android:color/transparent"
    app:layout_constraintBottom_toTopOf="@id/my_spin"
    android:layout_marginBottom="20dp"

    />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginBottom="50dp"
        android:id="@+id/my_spin"
        android:entries="@array/my_date"

        />










</androidx.constraintlayout.widget.ConstraintLayout>